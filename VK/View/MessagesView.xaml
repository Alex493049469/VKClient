<UserControl x:Class="VK.View.MessagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:baseControl="clr-namespace:Core.BaseControl;assembly=Core"
             xmlns:chat="clr-namespace:VK.ViewModel.Messages"
             xmlns:converters1="clr-namespace:VK.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataTemplateSelectors="clr-namespace:VK.DataTemplateSelectors"
             xmlns:listBoxBehavior="clr-namespace:Core.BaseControl.ListBoxBehavior;assembly=Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:core="clr-namespace:Core;assembly=Core"
             MinWidth="450"
             MinHeight="500"
             Background="White"
             mc:Ignorable="d">
    <UserControl.Resources>

        <converters1:TimeConverter x:Key="TimeConverter" x:Shared="false" />
        <dataTemplateSelectors:MessageDataTemplateSelector x:Key="MessageDataTemplateSelector" />

        <DataTemplate x:Key="MessagesTemplate" DataType="{x:Type chat:MessageItemViewModel}">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Image MaxWidth="40"
                       MaxHeight="40"
                       Margin="5"
                       VerticalAlignment="Top"
                       Source="{Binding UserIdPhoto}">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,40,40" />
                    </Image.Clip>
                </Image>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Width="400"
                               Height="15"
                               FontWeight="Bold"
                               Text="{Binding UserName}"
                               TextWrapping="WrapWithOverflow" />
                    <TextBlock Width="400"
                               MaxWidth="400"
                               Text="{Binding Body}"
                               TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="MessagesGift">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Image MaxWidth="40"
                       MaxHeight="40"
                       Margin="5"
                       VerticalAlignment="Top"
                       Source="{Binding UserIdPhoto}">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,40,40" />
                    </Image.Clip>
                </Image>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Width="400"
                               Height="15"
                               FontWeight="Bold"
                               Text="{Binding LastMessageUserName}"
                               TextWrapping="WrapWithOverflow" />
                    <Image Width="256"
                           Height="256"
                           Margin="5"
                           Source="{Binding GiftThumb_256}" />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="MessagesSticker">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Image MaxWidth="40"
                       MaxHeight="40"
                       Margin="5"
                       VerticalAlignment="Top"
                       Source="{Binding UserIdPhoto}">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,40,40" />
                    </Image.Clip>
                </Image>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Width="400"
                               Height="15"
                               FontWeight="Bold"
                               Text="{Binding LastMessageUserName}"
                               TextWrapping="WrapWithOverflow" />
                    <Image Width="128"
                           Height="128"
                           Margin="5"
                           Source="{Binding StickerPhoto_128}" />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="MessagesPhoto">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Image MaxWidth="40"
                       MaxHeight="40"
                       Margin="5"
                       VerticalAlignment="Top"
                       Source="{Binding UserIdPhoto}">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,40,40" />
                    </Image.Clip>
                </Image>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                    <Image Width="{Binding PhotoWidth}"
                           Height="{Binding PhotoHeight}"
                           Margin="5"
                           Source="{Binding Photo}" />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="MessagesVideo">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <Image MaxWidth="40"
                       MaxHeight="40"
                       Margin="5"
                       VerticalAlignment="Top"
                       Source="{Binding UserIdPhoto}">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,40,40" />
                    </Image.Clip>
                </Image>
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                    <Image Width="300"
                           Height="300"
                           Margin="5"
                           Source="{Binding Photo}" />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="97*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="26*" />
        </Grid.RowDefinitions>
        <ListBox Name="ListMessages"
                                     Grid.Row="0"
                                     Margin="0,0,0,5"
                                     VerticalAlignment="Stretch"
                                     ItemTemplateSelector="{StaticResource MessageDataTemplateSelector}"
                                     ItemsSource="{Binding MessageItemsViewModel,
                                                           IsAsync=True}"
                                     SelectedItem="{Binding ItemSelected}"
                 HorizontalContentAlignment="Stretch">


            <i:Interaction.Behaviors>
                <core:ScrollOnNewItem/>
            </i:Interaction.Behaviors>
            <ListBox.Style>
                <Style TargetType="{x:Type ListBox}">

                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling" />
                    <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="True" />
                    <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBox}">
                                <Border>
                                    <Grid Background="#eeeeee">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <ScrollViewer Name="PART_SCROLLVIEWER">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="ItemsSource" Value="{x:Null}">
                            <Setter Property="Template" Value="{StaticResource WaitControlTemplate}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Style>
        </ListBox>

        <GridSplitter x:Name="gridSplitter"
                      Grid.Row="1"
                      Height="4"
                      Margin="10,2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      ShowsPreview="False" />
        <Grid Grid.Row="2" Margin="0,2,0,0">
            <TextBox Height="auto"
                     MinHeight="60"
                     Margin="0,0,0,33"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     Language="ru-ru"
                     SpellCheck.IsEnabled="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
            <Button Width="75"
                    Height="28"
                    Margin="0,0,1,2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="Отправить" />
        </Grid>
    </Grid>
</UserControl>
