<UserControl x:Class="VK.Module.Friends.FriendsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="500"
             Height="500"
             mc:Ignorable="d">
    <Grid>
        <ListBox x:Name="ListFriend">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2"
                               Width="100"
                               Height="100"
                               Margin="5"
                               Source="{Binding photo_100}" />
                        <StackPanel Grid.Column="1" Margin="2,6">
                            <TextBlock FontWeight="Bold" Text="{Binding first_name}" />
                            <TextBlock Text="{Binding last_name}" />
                            <TextBlock Text="{Binding OnlineString}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
