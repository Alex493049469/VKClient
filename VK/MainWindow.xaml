<Window x:Class="VK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MainWindow1"
        Title=""
        Width="944"
        Height="624"
        AllowsTransparency="True"
        Closing="MainWindow1_Closing"
        Icon="/Images/Maly4.ico"
        Style="{StaticResource VS2012WindowStyle}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl Width="245"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right">
            <TabItem Header="Друзья">
                <Grid>
                    <ListBox x:Name="ListFriend"
                             Margin="10,10,10,31"
                             MouseDoubleClick="ListAudio_MouseDoubleClick"
                             SelectionChanged="ListAudio_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2"
                                           Width="100"
                                           Height="100"
                                           Margin="5"
                                           Source="{Binding Photo100}" />
                                    <StackPanel Grid.Column="1" Margin="2,6">
                                        <TextBlock FontWeight="Bold" Text="{Binding FirstName}" />
                                        <TextBlock Text="{Binding LastName}" />
                                        <TextBlock Text="{Binding OnlineNorm}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <CheckBox Name="CheckOnline"
                              Height="16"
                              Margin="10,0,109,10"
                              VerticalAlignment="Bottom"
                              Checked="CheckOnline_Checked"
                              Content="Онлайн"
                              Unchecked="CheckOnline_Unchecked" />
                </Grid>
            </TabItem>


        </TabControl>
        <TabControl Name="TabControler"
                    Margin="211,0,260,0"
                    TabStripPlacement="Top"/>

        <StackPanel Width="196"
                    Height="576"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Button Name="MyPageButton"
                    Margin="3"
                    Click="MyPageButton_Click">
                <StackPanel Width="174"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Image Width="50"
                           Height="50"
                           Margin="5"
                           Source="{Binding Photo50}" />
                    <TextBlock Margin="5" VerticalAlignment="Center">Моя страница</TextBlock>
                </StackPanel>
            </Button>
            <Button Height="37" Margin="3">
                <StackPanel Width="174"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Image Width="24"
                           Height="21"
                           Margin="5"
                           Source="Images/111user.png" />
                    <TextBlock Margin="5" VerticalAlignment="Center">Друзья</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="MyMessageButton"
                    Height="37"
                    Margin="3,3,0,3" HorizontalAlignment="Left" Width="190" Click="MyMessageButton_Click">
                <StackPanel Width="174"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Image Width="24"
                           Height="16"
                           Margin="5"
                           Source="Images/18envelope.png" />
                    <TextBlock Margin="5" VerticalAlignment="Center">Сообщения</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="AudioButton"
                    Height="37"
                    Margin="3"
                    Click="AudioButton_Click">
                <StackPanel Width="174"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Image Width="24"
                           Height="23"
                           Margin="5"
                           Source="Images/194note2.png" />
                    <TextBlock Margin="5" VerticalAlignment="Center">Аудиозаписи</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <StatusBar Grid.Row="1"
                   Height="24"
                   VerticalAlignment="Bottom">
            <TextBlock Margin="3,0,0,0"><Run Text="" />
            </TextBlock>
            <StatusBarItem HorizontalAlignment="Right">
                <ResizeGrip Opacity="0.75" />
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>